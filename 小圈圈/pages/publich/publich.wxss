/* 输入文字区域 */
.input-area{
  width: 100%;
}
.input-area .textarea{
  width: 100%;
  height: 300rpx;
  background: #f3efef;
}

.input-area .textarea textarea{
  width: 100%;
  height: 100%;
  padding: 8rpx 20rpx;
  line-height: 50rpx;  
  font-size: 28rpx;
  color: #999;
}
.input-area .textarea .inp{
  width: 100%;
  height: 100%;
  padding: 8rpx 20rpx;
  line-height: 50rpx;  
  font-size: 28rpx;
  color: black;
}
/* 预览图片区域 */
.preview-images{
  display: flex;
  flex-wrap: nowrap;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.images-item{
  width: 350rpx;
  height: 350rpx;
  margin: 0 20rpx;
  position: relative;
}
.images-item .img{
  width: 350rpx;
  height: 350rpx;
}
.images-item .clear{
  position: absolute;
  top: 0;
  right: 0rpx;
}

/* 按钮 */
.btn-func{
  width: 100%;
  position: absolute;
  bottom: 10rpx;
}

.btn-func .choose-img{
  width: 400rpx;
  height: 80rpx;
  line-height: 50rpx;
  background: rgb(113, 98, 250);
  border-radius: 80rpx;
  color: #fff;
  margin: 12rpx auto;
}

.btn-func .publish-quanquan{
  width: 400rpx;
  height: 80rpx;
  line-height: 50rpx;
  background: #d50310;
  border-radius: 80rpx;
  color: #fff;
  margin: 12rpx auto;
}