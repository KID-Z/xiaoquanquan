/* 标题区 */
.title {
  width: 100%;
  height: 60rpx;
}
.title .inp-title{
  height: 50rpx;
  margin-top: 5rpx;
  padding-left: 20rpx;
}


/* 内容区 */
.content {
  background: #f3efef;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.content .inp-content {
  width: 100%;
  height: 750rpx;
  padding-top: 20rpx;
}

/* 按钮区 */
.submit-proposal{
  margin-top: 160rpx;
}
.submit-proposal .submit-btn{
  width: 400rpx;
  height: 90rpx;
  background: #d50310;
  color: #fff;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}