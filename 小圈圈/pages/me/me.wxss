/* 用户信息 */
.account {
  width: 100%;
  height: 200rpx;
  background: #5495e6;
  display: flex;
  align-items: center;
  padding-left: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.user-info .nikename {
  font-size: 34rpx;
  font-weight: 600;
}

.user-info .address {
  font-size: 26rpx;
}

/* 功能列表 */
.func-list {
  width: 100%;
  background: #f4f4f4;
}

.line {
  height: 20rpx;
}

.hr {
  height: 1px;
  background: #ccc;
  opacity: .2;
}

.func-item {
  width: 100%;
  height: 80rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx 8rpx 40rpx;
  box-sizing: border-box;
  position: relative;
}

.icon image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: -8rpx;
}

.text {
  margin-left: 20rpx;
}

.nav {
  position: absolute;
  right: 30rpx;
}

.nav .invite{
  width: 150rpx;
  font-size: 28rpx;
  padding: 0;
  background: transparent;
  color: green;
}