<view class="container">
<!-- 用户账号信息 -->
<view class="account">
  <view class="user-avatar">
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class="user-info">
    <view class="nikename">
      <open-data type="userNickName"></open-data>
    </view>
    <view class="address">
      <open-data type="userCountry"></open-data>-<open-data type="userProvince"></open-data>-<open-data type="userCity">
      </open-data>
    </view>
  </view>
</view>

<!-- 功能列表 -->
<view class="func-list">
  <view class="line"></view>
  <!-- 收藏列表 -->
  <view class="func-item" bindtap="navToCollect">
    <view class="icon">
      <image src="/images/me/collect.png"></image>
    </view>
    <view class="text">收藏列表</view>
    <view class="nav">></view>
  </view>
  <view class="hr"></view>

  <!-- 发布历史 -->
  <view class="func-item" bindtap="navToHistory">
    <view class="icon">
      <image src="/images/me/history_20190809_131919.png"></image>
    </view>
    <view class="text">发布历史</view>
    <view class="nav">></view>
  </view>
  <view class="hr"></view>
  <view class="line"></view>
  <view class="func-item">
    <view class="icon">
      <image src="/images/me/invitation.png"></image>
    </view>
    <view class="text">邀请好友</view>
    <view class="nav"><button class="invite" open-type="share">一起来玩</button></view>
  </view>
  <view class="hr"></view>
  <view class="func-item" bindtap="navToProposal">
    <view class="icon">
      <image src="/images/me/advice.png"></image>
    </view>
    <view class="text">产品意见</view>
    <view class="nav">></view>
  </view>
  <view class="hr"></view>
</view>

</view>