/* 每一条小圈圈动态 */
.moments-item {
  padding: 20rpx 20rpx 20rpx 40rpx;
  margin: 20rpx 0rpx 0rpx 20rpx;
  box-sizing: border-box;
  position: relative;
}

/* 用户头像 昵称 时间 */
.user-info {
  display: flex;
  margin-bottom: 16rpx;
}

/* 用户头像 */
.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

/* 用户昵称 发布时间 */
.user-publish-info {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.user-publish-info .nikename {
  font-weight: 700;
  font-size: 30rpx;
}

.user-publish-info .time {
  font-size: 24rpx;
}

/* 内容区域 */
.text {
  font-size: 30rpx;
}

.img-area {
  display: flex;
  flex-wrap: wrap;
}

.img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 16rpx;
  margin-right: 20rpx;
}

/* 是否喜欢 */
.isLike {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;  
  margin-left: -30rpx;
}

.isLike .like-icon {
  width: 80rpx;
  height: 80rpx;
}

.isLike text {
  font-size: 32rpx;
  color: rgb(17, 14, 16);
  font-weight: bold;
}

/* 回复 */
.reply {
  position: absolute;
  top: 24rpx;
  right: 40rpx;
}

.reply .reply-btn {
  width: 100rpx;
  padding: 8rpx 10rpx;
  font-size: 26rpx;
}

/* 评论回复 */
.reply-comment {
  width: 100%;
  margin-top: 30rpx;
}

.hint {
  width: 100%;
  margin-left: 21rpx;
  font-size: 30rpx;
  color: #999;
}

.comment {
  width: 90%;
  margin: 20rpx auto;
}

.reply-name {
  font-size: 30rpx;
  font-weight: 600;
}

.comment-content {
  font-size: 30rpx;
}